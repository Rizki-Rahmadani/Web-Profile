<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Testimonial</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <link rel="stylesheet" href="asset/css/style.css" />
    <link rel="stylesheet" href="asset/css/blog.css" />
    <link rel="stylesheet" href="asset/css/logout.css" />
    <link rel="stylesheet" href="asset/css/testimonial.css" />
  </head>

  <body>
    <nav
      class="navbar navbar-expand-lg nav px-5"
      style="background-color: rgb(255, 255, 255)"
    >
      <div class="container-fluid">
        <img src="asset/img/dumbways.png" style="height: 60px" />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 px-3 gap">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link deactive" href="/blog">My Project</a>
            </li>
          </ul>
          <div class="swap">
            {{#if user}}
              <div class="dropdown">
                <div class="welcome-text">Welcome, {{user.name}} â–¼</div>
                <div class="dropdown-content">
                  <form action="/logout" method="POST">
                    <button type="submit" class="logout-btn">Logout</button>
                  </form>
                </div>
              </div>
            {{else}}
              <div class="d-flex flex-row gap px-3">
                <div class="item-collapse">
                  <a href="/register" class="nav-link deactive">Register</a>
                </div>
                <div class="item-collapse">
                  <a href="/login" class="nav-link deactive">Login</a>
                </div>
              </div>
            {{/if}}

            <a href="/contact" class="btn btn-contact">Contact</a>

          </div>
        </div>
      </div>
    </nav>
    <!-- Membuat Konten Kanan dan Kiri -->
    <div class="container-testimonial">
      <div class="testimonial-left">
        <div class="wrap-testimonial">
          <div class="container-testimonial-rating">
            <h1>Please provide feedback</h1>
            <div class="container-rating">
              <h2>Rating By Star</h2>
              <div class="rating">
                <button class="rating-btn">All</button>
                <button class="rating-btn">
                  1
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  2
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  3
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  4
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  5
                  <i class="fa-solid fa-star"></i>
                </button>
              </div>
            </div>
          </div>
          <div class="testimonial-form">
            <form id="testimonialForm">
              <div class="input-testimonial">
                <label for="">Author</label>
                <input type="text" name="" id="author" />
                <label for="">Comment</label>
                <textarea name="" id="content"></textarea>
                <div class="label-img">
                  <label>Upload Image</label>
                  <div class="input-blog-image-group">
                    <label for="image">
                      <p>Attach File</p>
                      <img src="asset/icon/file.png" alt="file" />
                    </label>
                    <input type="file" id="image" hidden />
                  </div>
                </div>
                <div class="btn-testimonial">
                  <button type="submit" class="btn-rating">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="testimonial-right">
        <div class="container-testimonial-rating">
          <h1>My Testimonials</h1>
          <div class="container-rating">
            <h2>Rating By Star</h2>
            <div class="rating">
              <button
                class="btn"
                ondblclick="changeColor(this)"
                onclick="getAllRating()"
              >
                All
              </button>
              <button
                class="btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(1)"
              >
                1
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(2)"
              >
                2
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(3)"
              >
                3
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(4)"
              >
                4
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(5)"
              >
                5
                <i class="fa-solid fa-star"></i>
              </button>
            </div>
          </div>
        </div>
        <section class="testimonials" id="testimonials"></section>
      </div>
    </div>
    <script src="asset/js/testimonial.js"></script>
  </body>
</html>