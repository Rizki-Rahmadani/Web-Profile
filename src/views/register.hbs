<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/asset/css/style.css" />
    <link rel="stylesheet" href="/asset/css/logout.css" />
    <link rel="stylesheet" href="/asset/css/blog.css" />

  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg nav px-5">
      <div class="container-fluid">
        <img src="asset/img/dumbways.png" style="height: 60px;" />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 px-3 gap">
            <li class="nav-item">
              <a class="nav-link deactive" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link deactive" href="/blog">My Project</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link deactive"
                href="/new-testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <div class="swap">
            {{#if user}}
              <div class="dropdown">
                <div class="welcome-text">Welcome, {{user.name}} â–¼</div>
                <div class="dropdown-content">
                  <form action="/logout" method="POST">
                    <button type="submit" class="logout-btn">Logout</button>
                  </form>
                </div>
              </div>
            {{else}}
              <div class="d-flex flex-row gap px-3">
                <div class="item-collapse">
                  <a href="/register" class="nav-link active">Register</a>
                </div>
                <div class="item-collapse">
                  <a href="/login" class="nav-link deactive">Login</a>
                </div>
              </div>
            {{/if}}

            <a href="/contact" class="btn btn-contact">Contact</a>

          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar -->
    <!-- Membuat Konten Submit Article -->
    <div class="container-fluid">
      <div
        class="container-sm d-flex justify-content-center align-items-center py-5"
      >
        <form
          action="/register"
          method="post"
          class="container-form rounded shadow p-3 mb-5"
          style="background-color: rgba(255, 255, 255, 0.4)"
        >
          <h1 class="text-center">REGISTER</h1>
          <div class="mb-3">
            <label for="inputName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="inputName"
              name="name"
            />
          </div>
          <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="inputEmail"
              name="email"
            />
          </div>
          <div class="mb-3">
            <label for="inputPassword" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="inputPassword"
              name="password"
            />
          </div>
          <br />
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-contact">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <!-- Konten Blog Selesai -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>

</html>