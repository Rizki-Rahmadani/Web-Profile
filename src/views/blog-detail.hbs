<html lang="en"></html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detail Project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/asset/css/blog.css" />
    <link rel="stylesheet" href="/asset/css/logout.css" />
    <link rel="stylesheet" href="/asset/css/blog-detail.css" />
    <link rel="stylesheet" href="/asset/css/style.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg nav px-5"
      style="background-color: rgba(255, 255, 255, 0.781)">
      <div class="container-fluid">
        <img src="/asset/img/dumbways.png" style="height: 60px" />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 px-3 gap">
            <li class="nav-item">
              <a class="nav-link deactive" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link deactive" href="/blog">My Project</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link deactive"
                href="/new-testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <div class="swap">
            {{#if user}}
              <div class="dropdown">
                <div class="welcome-text">Welcome, {{user.name}} â–¼</div>
                <div class="dropdown-content">
                    <form action="/logout" method="POST">
                        <button type="submit" class="logout-btn">Logout</button>
                    </form>
                </div>
            </div>
            {{else}}
                <div class="item-collapse">
                    <a href="/register" class="nav-link deactive">Register</a>
                </div>
                <div class="item-collapse">
                    <a href="/login" class="nav-link deactive">Login</a>
                  </div>
                {{/if}}

            <a href="/contact" class="btn btn-contact">Contact</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar -->
    {{! Konten Project }}

    <div class="container mt-5 py-5 shadow" style="background-color: #8292a0;" >
      <div class="row mb-4">
        <h1 class="mb-5 text-center">My Project</h1>
        <!-- Foto sebelah kiri -->
        <div class="col-md-8">
          <img src="/{{blog.imgae}}" alt="Project Image" class="img-fluid rounded">
        </div>

        <!-- Info sebelah kanan -->
        <div class="col-md-4">
          
          <div class="mb-3">
            <p class="mb-1" style="color: #ffffff;">Duration:</p>
            <ul>
              <li class="d-flex align-items-center gap-2">
                <img src="/asset/icon/calendar.png" style="width: 20px;">
                <p>{{blog.startDate}} - {{blog.endDate}}</p>
              </li>
              <li class="d-flex align-items-center gap-2">
                <img src="/asset/icon/clock.png" style="width: 20px;">
                <p>{{calculateDuration blog.startDate blog.endDate}}</p>
              </li>
            </ul>
          </div>

          <div class="mb-3">
            <p class="mb-1">Technologies:</p>
            <div class="d-flex justify-content-start flex-wrap gap-2">
              {{#each blog.techImages}}
                {{#if this}}
                  <div style="padding: 10px; display: flex; align-items: center; gap: 10px;">
                    <img src="/asset/icon/{{this}}" alt="Tech Icon" style="width: 30px;">
                    {{#if (eq this "nodejs.png")}}
                      <p>Node JS</p>
                    {{else if (eq this "reactjs.png")}}
                      <p>React JS</p>
                    {{else if (eq this "typescript.png")}}
                      <p>Typescript</p>
                    {{else if (eq this "html.png")}}
                      <p>HTML</p>

                    {{/if}}
                  </div>
                {{/if}}
              {{/each}}
            </div>
          </div>

          <div class="mb-3">
            <p class="mb-1" style="color: #ffffff;">Author:</p>
            <p style="color: #ffffff;">{{blog.author}}</p>
          </div>
        </div>
      </div>

      <!-- Content full width dibawah -->
      <div class="row">
        <div class="col-12">
          <h3 class="mb-3" style="color: #ffffff;">``{{blog.title}}``</h3>
          <p style="text-align: justify; color: #ffffff;">{{blog.content}}</p>
        </div>
      </div>
    </div>

    

    {{! Konten Project Selesai }}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>