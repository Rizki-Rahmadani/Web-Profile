<html lang="en"></html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detail Project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/asset/css/blog.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg px-5"
      style="background-color: rgba(255, 255, 255, 0.781)">
      <div class="container-fluid">
        <img src="/asset/img/dumbways.png" style="height: 60px" />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/blog">Blog</a>
            </li>
          </ul>
          <a href="/contact" class="btn btn-contact">Contact</a>
          <a href="/login" class="btn btn-login">Login</a>
        </div>
      </div>
    </nav>
    <!-- Navbar -->
    {{! Konten Project }}

    <div class="container mt-5 py-5" >
      <div class="row mb-4">
        <!-- Foto sebelah kiri -->
        <div class="col-md-8">
          <img src="{{blog.imgae}}" alt="Project Image" class="img-fluid rounded">
        </div>

        <!-- Info sebelah kanan -->
        <div class="col-md-4">
          
          <div class="mb-3">
            <p class="mb-1" style="color: #ffffff;">Duration:</p>
            <p style="color: #ffffff  ;">{{calculateDuration blog.startDate blog.endDate}}</p>
          </div>

          <div class="mb-3">
            <p class="mb-1" style="color: #ffffff;">Technologies:</p>
            <div class="d-flex gap-2">
              {{#each blog.techImages}}
                {{#if this}}
                  <img src="/asset/icon/{{this}}" alt="Tech Icon" style="width: 30px;">
                {{/if}}
              {{/each}}
            </div>
          </div>

          <div class="mb-3">
            <p class="mb-1" style="color: #ffffff;">Author:</p>
            <p style="color: #ffffff;">{{blog.author}}</p>
          </div>
        </div>
      </div>

      <!-- Content full width dibawah -->
      <div class="row">
        <div class="col-12">
          <h3 class="mb-3" style="color: #ffffff;">``{{blog.title}}``</h3>
          <p style="text-align: justify; color: #ffffff;">{{blog.content}}</p>
        </div>
      </div>
    </div>

    <style>
      .container {
        padding: 0 80px;
      }

      img.img-fluid {
        width: 100%;
        height: 400px;
        object-fit: cover;
      }

      h2 {
        font-weight: bold;
        color: #111727;
      }

      strong {
        color: #111727;
      }

      p {
        color: #4F4F4F;
        margin-bottom: 0;
      }
    </style>

    {{! Konten Project Selesai }}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>