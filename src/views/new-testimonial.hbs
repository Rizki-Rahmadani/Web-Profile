<html lang="en"></html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Personal Website</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/asset/css/blog.css" />
    <link rel="stylesheet" href="/asset/css/logout.css" />
    <link rel="stylesheet" href="/asset/css/style.css" />
    <link rel="stylesheet" href="/asset/css/testimonial.css" />

  </head>

  <body>
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg nav px-5"
      style="background-color: rgb(255, 255, 255)"
    >
      <div class="container-fluid">
        <img src="asset/img/dumbways.png" style="height: 60px" />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 px-3 gap">
            <li class="nav-item">
              <a class="nav-link deactive" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link deactive" href="/blog">My Project</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                href="/new-testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <div class="swap">
            {{#if user}}
              <div class="dropdown">
                <div class="welcome-text">Welcome, {{user.name}} â–¼</div>
                <div class="dropdown-content">
                  <form action="/logout" method="POST">
                    <button type="submit" class="logout-btn">Logout</button>
                  </form>
                </div>
              </div>
            {{else}}
              <div class="d-flex flex-row gap px-3">
                <div class="item-collapse">
                  <a href="/register" class="nav-link deactive">Register</a>
                </div>
                <div class="item-collapse">
                  <a href="/login" class="nav-link deactive">Login</a>
                </div>
              </div>
            {{/if}}

            <a href="/contact" class="btn btn-contact">Contact</a>

          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar -->
    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        {{messages.success}}
      </div>
    {{/if}}

    <div class="row container py-5 m-auto">
    <!-- Konten kiri-->
      <div class="col-4">
        <div class="shadow-lg rounded">
        <h3 style="font-weight: bolder; padding-top: 20px; text-align: center; ">Please provide feedback</h3>
        
      <div class="container-fluid">
        <div
          class="container-sm d-flex justify-content-center align-items-center"
        >
          <form
            method="post"
            action="/blog"
            enctype="multipart/form-data"
            class="p-2 mb-5"
            style="gap: 10px;"
          >
          <h4 class="text-center">Rating By Star</h4>
        <div class="d-flex justify-content-center gap">
                <button class="rating-btn">All <i class="fa-solid fa-star"></i></button>
                <button class="rating-btn">
                  1
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  2
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  3
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  4
                  <i class="fa-solid fa-star"></i>
                </button>
                <button class="rating-btn">
                  5
                  <i class="fa-solid fa-star"></i>
                </button>
            </div>
            <br>
            <div class="mb-3">
              <label for="inputName" class="form-label">Author</label>
              <input
                type="text"
                class="form-control"
                id="inputName"
                name="title"
              />
            </div>
            <div class="mb-3">
              <label
                for="floatingTextarea"
                class="form-label"
              >Description</label>
              <textarea
                class="form-control"
                placeholder="Leave a comment here"
                id="floatingTextarea"
                name="content"
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="formFile" class="form-label">Upload Image</label>
              <input
                class="form-control"
                type="file"
                id="formFile"
                name="image"
              />
            </div>
            <br />
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-contact">Submit</button>
            </div>
          </form>
        </div>
      </div>
      </div>
      </div>
      <!-- Konten kiri-->

    <!-- Konten kanan -->
        <div class="col">
            <h1 class="text-center">Testimonials</h1>
            <div class="container-rating">
                <div class="text-center">
            <h2>Rating By Star</h2>
            <div class="d-flex justify-content-center gap">
              <button
                class="rating-btn"
                ondblclick="changeColor(this)"
                onclick="getAllRating()"
              >
                All
              </button>
              <button
                class="rating-btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(1)"
              >
                1
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="rating-btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(2)"
              >
                2
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="rating-btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(3)"
              >
                3
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="rating-btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(4)"
              >
                4
                <i class="fa-solid fa-star"></i>
              </button>
              <button
                class="rating-btn"
                ondblclick="changeColor(this)"
                onclick="getRatingByStar(5)"
              >
                5
                <i class="fa-solid fa-star"></i>
              </button>
            </div>
            </div>
          </div>
            <div class="container-fluid testimonials" id="testimonials">
                {{!-- <div class="card" style="width: 10rem;">
                <img src="${testimonial.image}" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">${testimonial.content}</p>
                    <p class="card-text">${testimonial.author}</p>
                    <p class="card-text"><i class="fa-solid fa-star"></i>${testimonial.star}</p>
                </div>
                </div> --}}
            </div>
        </div>
    <!-- Konten kanan -->
    </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/asset/js/testimonial.js"></script>
  </body>
</html>