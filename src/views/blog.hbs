<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/asset/css/blog.css" />
    <link rel="stylesheet" href="/asset/css/logout.css" />
    <link rel="stylesheet" href="/asset/css/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg nav px-5"
      style="background-color: rgba(255, 255, 255, 0.781)"
    >
      <div class="container-fluid">
        <img src="asset/img/dumbways.png" style="height: 60px" />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 px-3 gap">
            <li class="nav-item">
              <a class="nav-link deactive" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/blog">My Project</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link deactive"
                href="/new-testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <div class="swap">
            {{#if user}}
              <div class="dropdown">
                <div class="welcome-text">Welcome, {{user.name}} â–¼</div>
                <div class="dropdown-content">
                  <form action="/logout" method="POST">
                    <button type="submit" class="logout-btn">Logout</button>
                  </form>
                </div>
              </div>
            {{else}}
              <div class="item-collapse">
                <a href="/register" class="nav-link deactive">Register</a>
              </div>
              <div class="item-collapse">
                <a href="/login" class="nav-link deactive">Login</a>
              </div>
            {{/if}}
            <a href="/contact" class="btn btn-contact">Contact</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar -->
    <!-- Membuat Konten Submit Article -->
    {{#if user}}
      <div class="container-fluid">
        <div
          class="container-sm d-flex justify-content-center align-items-center py-5"
        >
          <form
            method="post"
            action="/blog"
            enctype="multipart/form-data"
            class="container-form rounded shadow p-3 mb-5"
            style="gap: 10px; background-color: rgba(255, 255, 255, 0.4)"
          >
            <h1 class="text-center">Create Project</h1>
            <div class="mb-3">
              <label for="inputName" class="form-label">Project Name</label>
              <input
                type="text"
                class="form-control"
                id="inputName"
                name="title"
              />
            </div>
            <div class="d-flex justify-content-between">
              <div class="mb-3">
                <label for="inputStartDate" class="form-label">Start Date</label>
                <input
                  type="date"
                  class="form-control"
                  id="startDate"
                  name="startDate"
                />
              </div>
              <div class="mb-3">
                <label for="inputEndDate" class="form-label">End Date</label>
                <input
                  type="date"
                  class="form-control"
                  id="endDate"
                  name="endDate"
                />
              </div>
            </div>
            <div class="mb-3">
              <label
                for="floatingTextarea"
                class="form-label"
              >Description</label>
              <textarea
                class="form-control"
                placeholder="Leave a comment here"
                id="floatingTextarea"
                name="content"
              ></textarea>
            </div>
            <div>
              <div>
                <label for="inputFilter" class="form-label">Technology :</label>
              </div>
              <div class="mb-3 d-flex justify-content-start gap">
                <div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="Node JS"
                      id="nodeJsCheck"
                      name="technologies"
                    />
                    <label class="form-check-label" for="nodeJsCheck">
                      Node JS
                    </label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="React JS"
                      id="reactJsCheck"
                      name="technologies"
                    />
                    <label class="form-check-label" for="reactJsCheck">
                      React JS
                    </label>
                  </div>
                </div>
                <div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="Typescript"
                      id="typescriptCheck"
                      name="technologies"
                    />
                    <label class="form-check-label" for="typescriptCheck">
                      Typescript
                    </label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="HTML"
                      id="htmlCheck"
                      name="technologies"
                    />
                    <label class="form-check-label" for="htmlCheck">
                      HTML
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label for="formFile" class="form-label">Upload Image</label>
              <input
                class="form-control"
                type="file"
                id="formFile"
                name="image"
              />
            </div>
            <br />
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-contact">Submit</button>
            </div>
          </form>
        </div>
      </div>
    {{/if}}
    <!-- Konten Blog Selesai -->
    {{! Konten Project }}

    <div
      class="container-fluid p-3 mb-2 text-dark"
      style="gap: 10px; background-color: rgba(255, 255, 255, 0.4)"
    >

      <h2 class="text-center">My Project</h2>
      <div class="container-card d-flex flex-wrap gap">
        {{#each blogs}}
          <div class="d-flex flex-wrap justify-content-center gap">

            <div class="card card-project" style="width: 20rem;">
              <img src="{{imgae}}" class="image card-image" alt="..." />
              <div class="card-body">
                <h5 class="card-title">
                  <a
                    href="/blog-detail/{{id}}"
                    target="_blank"
                    style="text-decoration: none; color: black;"
                  >{{title}}</a>
                </h5>
                <p class="card-text card-duration">Duration:
                  {{calculateDuration startDate endDate}}
                  |
                  {{author}}</p>
                <p class="card-text card-content">{{content}}</p>
                <div class="d-flex justify-content-start py-1">
                  {{#each techImages}}
                    <img
                      src="/asset/icon/{{this}}"
                      alt="{{this}}"
                      style="width: 30px; height: 30px; margin-right: 5px;"
                    />
                  {{/each}}
                </div>
                {{#if isOwner}}
                  <div class="d-flex justify-content-start gap">
                    <div>
                      <a href="/edit-blog/{{id}}" class="btn btn-card">Edit</a>
                    </div>
                    <div>
                      <form method="post" action="/delete-blog/{{id}}">
                        <button
                          type="submit"
                          onclick="alert('Project berhasil dihapus')"
                          class="btn btn-card"
                        >Delete</button>
                      </form>
                    </div>
                  </div>
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    {{! Konten Project Selesai }}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>