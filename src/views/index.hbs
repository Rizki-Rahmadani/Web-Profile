    <!-- Konten Bawah -->
    <div
      class="container-fluid p-3 mb-2 text-dark"
      style="gap: 10px; background-color: rgba(255, 255, 255, 0.4)"
    >

      <h2 class="text-center">My Project</h2>
      <div class="container-card d-flex flex-wrap gap">
        {{#each blogs}}
          <div class="d-flex flex-wrap justify-content-center gap">

            <div class="card card-project" style="width: 20rem;">
              <img src="{{imgae}}" class="image card-image" alt="..." />
              <div class="card-body">
                <h5 class="card-title">
                  <a
                    href="/blog-detail/{{id}}"
                    target="_blank"
                    style="text-decoration: none; color: black;"
                  >{{title}}</a>
                </h5>
                <p class="card-text card-duration">Duration:
                  {{calculateDuration startDate endDate}}
                  |
                  {{author}}</p>
                <p class="card-text card-content">{{content}}</p>
                <div class="d-flex justify-content-start py-1">
                  {{#each techImages}}
                    <img
                      src="/asset/icon/{{this}}"
                      alt="{{this}}"
                      style="width: 30px; height: 30px; margin-right: 5px;"
                    />
                  {{/each}}
                </div>
                {{#if isOwner}}
                  <div class="d-flex justify-content-start gap">
                    <div>
                      <a href="/edit-blog/{{id}}" class="btn btn-card">Edit</a>
                    </div>
                    <div>
                      <form method="post" action="/delete-blog/{{id}}">
                        <button
                          type="submit"
                          onclick="alert('Project berhasil dihapus')"
                          class="btn btn-card"
                        >Delete</button>
                      </form>
                    </div>
                  </div>
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
