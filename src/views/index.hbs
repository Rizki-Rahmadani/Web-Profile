    <nav
      class="navbar navbar-expand-lg nav px-5"
      style="background-color: rgb(255, 255, 255)"
    >
      <div class="container-fluid">
        <img src="asset/img/dumbways.png" style="height: 60px" />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 px-3 gap">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link deactive" href="/blog">My Project</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link deactive"
                href="/new-testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <div class="swap">
            {{#if user}}
              <div class="dropdown">
                <div class="welcome-text">Welcome, {{user.name}} â–¼</div>
                <div class="dropdown-content">
                  <form action="/logout" method="POST">
                    <button type="submit" class="logout-btn">Logout</button>
                  </form>
                </div>
              </div>
            {{else}}
              <div class="d-flex flex-row gap px-3">
                <div class="item-collapse">
                  <a href="/register" class="nav-link deactive">Register</a>
                </div>
                <div class="item-collapse">
                  <a href="/login" class="nav-link deactive">Login</a>
                </div>
              </div>
            {{/if}}

            <a href="/contact" class="btn btn-contact">Contact</a>

          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar -->
    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        {{messages.success}}
      </div>
    {{/if}}
